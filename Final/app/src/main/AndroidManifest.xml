<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.comicreaderapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComicReader"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- HOME / LAUNCHER -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".readUI.MangaDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.home.HomeActivity" />

        <activity
            android:name=".ui.reader.ComicReaderActivity"
            android:exported="false"
            android:parentActivityName=".readUI.MangaDetailActivity" />

        <activity android:name=".readUI.ReaderActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".ui.auth.VerifyOtpActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.auth.OtpAuthActivity" />
        <activity android:name=".ui.auth.LoginActivity" />
        <activity android:name=".ui.auth.ForgotPasswordActivity" />
        <activity android:name=".ui.auth.ResetPasswordActivity" />
        <activity android:name=".ui.recent.RecentActivity" />
        <activity android:name=".ui.bookmarks.BookmarksActivity" />
        <activity android:name=".ui.chat.ChatActivity" />
        <activity android:name=".ui.account.AccountActivity" />
        <activity android:name=".ui.genre.GenreMangaActivity" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
