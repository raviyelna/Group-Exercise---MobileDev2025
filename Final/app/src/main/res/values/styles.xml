<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base app theme uses MaterialComponents for consistent components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="materialCardViewStyle">@style/CustomCard</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>