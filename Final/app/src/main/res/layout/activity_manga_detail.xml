<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== COVER + BOOKMARK ===== -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:id="@+id/img_manga_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null" />

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="239dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp">

                    <ImageView
                        android:id="@+id/btn_bookmark"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="200dp"
                        android:src="@drawable/ic_bookmark"
                        android:tint="@color/white"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>
            </FrameLayout>

            <!-- ===== TITLE ===== -->
            <TextView
                android:id="@+id/tv_manga_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="12dp" />

            <!-- ===== STATUS ===== -->
            <TextView
                android:id="@+id/tv_manga_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:paddingBottom="4dp" />

            <!-- ===== GENRES ===== -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:singleLine="false"
                app:chipSpacing="8dp" />

            <!-- ===== DESCRIPTION ===== -->
            <TextView
                android:id="@+id/tv_manga_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:padding="12dp" />

            <!-- ===== CHAPTER TITLE ===== -->
            <TextView
                android:id="@+id/tv_chapters_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapters"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="12dp" />

            <!-- ===== CHAPTER LIST ===== -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
