<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_recently_updated.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_recent_cover"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_cover"
            android:contentDescription="@null" />

        <!-- Container to the right of image -->
        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/img_recent_cover"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recent_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_recent_chapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:maxLines="3"
                android:ellipsize="end"/>


            <!-- Spacer to push button a little down -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Button
                android:id="@+id/btn_read"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_gravity="start"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/accent_purple"
                android:text="Read"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
